all_friends = {}
all_friends[:friends] = @friends.map do |friend|
  f = {id: friend[:id]}
  f[:user] = render partial: "api/users/user",
    locals: {user: friend[:user]}
end
all_friends[:pending_friends] = @pending_friends.map do |friend|
  f = {id: friend[:id]}
  f[:user] = render partial: "api/users/user",
    locals: {user: friend[:user]}
end
all_friends
